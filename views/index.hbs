

<div class="content-container">

    <!-- Button trigger modal -->
    <button type="button" id="btnAddFood" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Add Food
    </button>
    <button type="button" id="btnAddTable" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModalTable">
        Add Table
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Food</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/food/addFood" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="exampleInputEmail1"  class="form-label">Food Name</label>
                        <input type="text" name="foodName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">

                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1"  class="form-label">Price</label>
                        <input type="text" name="price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">

                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1"  class="form-label">Image</label>
                        <input type="file" name="image" class="form-control" id="exampleInputEmail1" >

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" >Create</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    <!--    table -->
    <div class="modal fade" id="exampleModalTable" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Table</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/food/addTable" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="exampleInputEmail1"  class="form-label">Food Name</label>
                            <input type="text" name="tableName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" >Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <!-- Main component for a primary marketing message or call to action -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {{#each foods}}
            <div class="col">
                <div class="card h-100">
                    <img src="{{this.image}}" class="card-img-top" alt="..." width="300px" height="200px">
                    <div class="card-body">
                        <h5 class="card-title">{{this.foodName}}</h5>
                        <h5 class="card-title">{{this.price}} Ä‘</h5>
<!--                        <a class="btn btn-danger mt-2" href="/food/updateFood/{{this._id}}" >Update</a>-->
                        <button type="button" id="btnAddTable" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModalupdateFood">
                            Update
                        </button>
                        <a href="/food/deleteFood/{{this._id}}" class="btn btn-danger" >Delete</a>
                    </div>

                </div>
            </div>

                <!--    update food -->
                <div class="modal fade" id="exampleModalupdateFood" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Update Food</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form action="/food/updateFood/{{this._id}}" method="post" enctype="multipart/form-data">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1"  class="form-label">Food Name</label>
                                        <input type="text" name="foodName" class="form-control" id="exampleInputEmail1" value="{{this.foodName}}">

                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1"  class="form-label">Price</label>
                                        <input type="text" name="price" class="form-control" id="exampleInputEmail1" value="{{this.price}}">

                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1"  class="form-label">Image</label>
                                        <input type="file" name="image" class="form-control" id="exampleInputEmail1" >

                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary" >Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            {{/each}}
        </div>


    </div>

    <div class="modal" tabindex="-1" id="orderModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleModalOrder"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="desModalOrder"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</div>
